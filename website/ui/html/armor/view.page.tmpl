{{define "armors/view"}}

{{template "header" .}}

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="form-group row d-flex justify-content-center">
                                <span class="col-md-6 text-right">Name:</span>
                                <span class="col-md-6 text-left">{{.Name}}</span>
                            </div>
                            <div class="form-group row d-flex justify-content-center">
                                <span class="col-md-6 text-right">Location:</span>
                                <span class="col-md-6 text-left">{{.Location}}</span>
                            </div>
                            <div class="form-group row d-flex justify-content-center">
                                <span class="col-md-6 text-right">Cost:</span>
                                <span class="col-md-6 text-left">{{.Cost}} Rupees</span>
                            </div>
                            <div class="form-group row d-flex justify-content-center">
                                <span class="col-md-6 text-right">Uses:</span>
                                <span class="col-md-6 text-left">{{.Uses}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{{template "footer" .}}

{{end}}